<!DOCTYPE html>
<html>
<head>
  <title>CrmApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="manifest" href="/manifest.json">

  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="theme-color" content="#007bff">

  <!-- Loading Screen Styles -->
  <style>
    /* Loading screen styles */
    .loading-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999; /* Ensure it stays on top */
    }

    .loading-logo {
      width: 150px;
      height: auto;
      display: block;
    }

    /* Optional Spinner (below the logo) */
    .spinner {
      border: 4px solid rgba(0, 0, 0, 0.1);
      border-top: 4px solid #007bff;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin-top: 20px;
    }

    /* Spinner animation */
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Profile info bar */
    .profile-bar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      transform: translateZ(0); /* Fix iOS position issues */
      width: 100%;
      z-index: 10000;
      padding: 10px 20px; /* Adjust padding to make the text sit properly */
      height: calc(40px + env(safe-area-inset-top)); /* Set a fixed height with safe area consideration */
      background-color: #abc9ec;
      padding-top: env(safe-area-inset-top); /* Ensure padding for the notch area */
      display: flex; /* Add flexbox to align content properly */
      align-items: center; /* Vertically center the content */
    }

    .profile-bar span {
      font-weight: bold;
      margin-right: 15px;
    }

    .profile-bar .logout-link {
      color: #007bff;
      text-decoration: none;
    }

    .profile-bar .logout-link:hover {
      text-decoration: underline;
    }

    /* Adjust main content to avoid overlap with profile bar and navbar */
    .main-content {
      margin-top: 60px; /* Ensure space between content and profile bar */
      margin-bottom: 120px; /* Avoid overlap with the bottom navbar */
    }

    /* Bottom Navigation Bar Styles */
.navbar {
  background-color: #abc9ec;
  padding: 5px 0;
  position: fixed !important;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -1px 6px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  z-index: 1040;
  padding-bottom: calc(5px + env(safe-area-inset-bottom));
}


    .nav-link {
      color: #000; /* Black color for icons and text */
      text-align: center;
      font-size: 10px; /* Adjust text size to fit better on mobile */
      text-decoration: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .nav-link i {
      font-size: 22px; /* Adjust icon size slightly larger */
      display: block;
      margin-bottom: 3px; /* Increase spacing between icon and text */
      padding: 6px; /* Adjust padding to reduce extra space */
      background-color: #000; /* Black background for icon */
      border-radius: 50%; /* Fully rounded corners */
      color: #fff; /* White icon color */
    }

    .nav-link:hover i {
      background-color: #007bff; /* Change icon background on hover */
    }

    .nav-link:hover {
      color: #007bff; /* Hover effect to change text color */
    }

    /* Adjust body padding for iOS standalone mode */
    body {
      padding-top: calc(60px + env(safe-area-inset-top)); /* Adjust padding to include the safe area inset */
      padding-bottom: calc(80px + env(safe-area-inset-bottom)); /* Add padding for safe area on iPhone */
    }

    /* Mobile-specific adjustments */
    @media (max-width: 768px) {
      body {
        padding-top: calc(80px + env(safe-area-inset-top)); /* Further increase padding for smaller screens */
        padding-bottom: calc(80px + env(safe-area-inset-bottom)); /* Add padding for safe area on iPhone */
      }
    }
  </style>
</head>

<body>

  <!-- Loading Screen -->
  <div id="loading-screen" class="loading-screen">
    <%= image_tag 'Logo_La_Canadienne_Redesign-No_R.png', alt: 'Logo', class: 'loading-logo' %>
    <div class="spinner"></div> <!-- Optional Spinner -->
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Render flash messages only if not on specific pages like 'sessions#new' (login page) -->
    <% unless controller.controller_name == 'sessions' && controller.action_name == 'new' %>
      <%= render 'shared/flash' %>
    <% end %>
    <%= yield %>
  </div>

  <!-- Bottom Navigation Bar -->
  <nav class="navbar">
    <div class="container-fluid d-flex justify-content-around">
      <%= link_to dashboard_path, class: "nav-link" do %>
        <i class="fas fa-home"></i>
        Home
      <% end %>

      <%= link_to search_clients_path, class: "nav-link" do %>
        <i class="fas fa-search"></i>
        Search
      <% end %>

      <%= link_to new_client_path, class: "nav-link" do %>
        <i class="fas fa-plus-circle"></i>
        New Client
      <% end %>

      <%= link_to appointments_path, class: "nav-link" do %>
        <i class="fas fa-calendar"></i>
        Appointments
      <% end %>

      <%= link_to campaigns_path, class: "nav-link" do %>
        <i class="fas fa-bullhorn"></i>
        Campaigns
      <% end %>
    </div>
  </nav>

  <!-- Signature Pad Script -->
  <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js" defer></script>

  <!-- Service Worker Registration -->
  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker
        .register('/service-worker.js')
        .then(function (registration) {
          console.log('ServiceWorker registration successful with scope: ', registration.scope);
        })
        .catch(function (error) {
          console.log('ServiceWorker registration failed: ', error);
        });
    }

    // Show loading screen only on the first visit with Turbo support
    document.addEventListener('turbo:load', function() {
      var loadingScreen = document.getElementById('loading-screen');

      // Check if the loading screen has been shown before
      if (localStorage.getItem('loadingScreenShown') === null) {
        // First visit, show the loading screen
        setTimeout(function() {
          loadingScreen.style.display = 'none';
          localStorage.setItem('loadingScreenShown', 'true'); 
        }, 3000); // 
      } else {
        loadingScreen.style.display = 'none';
      }
    });

    // Standalone mode for iOS
    if (window.navigator.standalone) {
      document.body.style.paddingTop = '80px'; // Increase padding to account for the fixed bar in standalone mode
    }

  </script>

</body>
</html>
